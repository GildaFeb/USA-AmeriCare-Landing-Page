@{
    ViewData["Title"] = "Contacts";
}

<link rel="stylesheet" href="~/css/contacts.css" asp-append-version="true" />

<div class="main-container">
    <div class="contact-container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        <img src="~/img/contact1.webp" alt="Floating Logo" class="floating-img">
        <img src="~/img/contact2.webp" alt="Floating Logo" class="floating-img">
        <img src="~/img/contact3.webp" alt="Floating Logo" class="floating-img">
        <img src="~/img/contact4.webp" alt="Floating Logo" class="floating-img">
        <img src="~/img/contact7.webp" alt="Floating Logo" class="floating-img">
        <img src="~/img/contact8.webp" alt="Floating Logo" class="floating-img">
        <img src="~/img/temp_logo.png" alt="Floating Logo" class="floating-img">

        <h3 style="color: var(--lightBlue)">Get in Touch</h3>
        <form asp-action="Contact" asp-controller="Home" method="post">
            <div class="mb-3">
                <input type="text" name="name" class="form-control" placeholder="Your Name" required>
            </div>
            <div class="mb-3">
                <input type="email" name="email" class="form-control" placeholder="Your Email" required>
            </div>
            <div class="mb-3">
                <input type="text" name="phone" class="form-control" placeholder="Your Phone Number" required>
            </div>
            <div class="mb-3">
                <textarea name="message" class="form-control" rows="5" placeholder="Questions or Comments" required></textarea>
            </div>
            <div class="privacy">
                Privacy policy statement-SMS Terms & Conditions: By subscribing to USAmeriCare Test Strips SMS services, you agree to receive text messages from us. USAmeriCare Test Strips will send SMS messages to communicate with customers on the status of the projects they have requested to provide a better overall customer experience. For HELP, please contact us at (917) 203-8615. To opt-out of receiving messages, reply with “STOP” at any time. Message frequency may vary. Standard message and data rates may apply.
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-custom mb-4">Send Message</button>
            </div>
        </form>

        <div class="row text-center mb-4 d-flex flex-column align-items-center">
            <div class="contact-cards-wrapper">
                <div class="contact-card"> 
                    <p> <span style="color: var(--textBlack); font-weight: 700;">PHONE NUMBER</span> <br /> (917) 203-8615</p>
                </div>
                <div class="contact-card">
                    <p> <span style="color: var(--textBlack); font-weight: 700;">EMAIL</span> <br /> info@usamericareteststrips.com</</p>
                </div>
            </div>
        </div>
    </div>
    

</div>
